@model IEnumerable<impacta_Projeto03.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<h1 class="mt-3">Vendas</h1>

<p>
    <a class="btn btn-primary text-white" style="text-decoration: none;" asp-action="Create">Criar Novo</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-light">
        <thead style="white-space: nowrap;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FuncionarioID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataVenda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorUnitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalVenda)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FuncionarioID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalVenda)
                    </td>
                    <td>
                        <a class="btn btn-primary mb-1" asp-action="Edit" asp-route-id="@item.VendaID">Editar</a>
                        <a class="btn btn-warning mb-1" asp-action="Details" asp-route-id="@item.VendaID">Detalhes</a>
                        <a class="btn btn-danger mb-1" asp-action="Delete" asp-route-id="@item.VendaID">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>