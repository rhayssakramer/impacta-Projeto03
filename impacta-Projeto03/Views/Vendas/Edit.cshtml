@model impacta_Projeto03.Models.Venda

@{
    ViewData["Title"] = "Editar | Vendas";
}
<h1 class="mt-3">Editar Vendas</h1>
<hr />
<div class="container">
    <form asp-action="Edit">
        <div class="row justify-content-center align-items-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaID" />
            <div class="col">
                <div class="col-md-12">
                    <label asp-for="FuncionarioID" class="control-label"></label>
                    <input asp-for="FuncionarioID" class="form-control" />
                    <span asp-validation-for="FuncionarioID" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Produto" class="control-label"></label>
                    <input asp-for="Produto" class="form-control" />
                    <span asp-validation-for="Produto" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="col-md-12">
                    <label asp-for="ClienteID" class="control-label"></label>
                    <input asp-for="ClienteID" class="form-control" />
                    <span asp-validation-for="ClienteID" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="DataVenda" class="control-label"></label>
                    <input asp-for="DataVenda" class="form-control" />
                    <span asp-validation-for="DataVenda" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12 mt-2">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-2">
                <label asp-for="ValorUnitario" class="control-label"></label>
                <input asp-for="ValorUnitario" class="form-control" />
                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-2">
                <label asp-for="TotalVenda" class="control-label"></label>
                <input asp-for="TotalVenda" class="form-control" />
                <span asp-validation-for="TotalVenda" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-light text-black" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
