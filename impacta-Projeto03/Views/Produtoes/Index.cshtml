@model IEnumerable<impacta_Projeto03.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1 class="mt-3">Produtos</h1>

<p>
    <a class="btn btn-primary text-white" style="text-decoration: none;" asp-action="Create">Criar Novo</a>
</p>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                    <a class="btn btn-primary mb-1" asp-action="Edit" asp-route-id="@item.ProdutoID">Editar</a>
                    <a class="btn btn-warning mb-1" asp-action="Details" asp-route-id="@item.ProdutoID">Detalhes</a>
                    <a class="btn btn-danger mb-1" asp-action="Delete" asp-route-id="@item.ProdutoID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
