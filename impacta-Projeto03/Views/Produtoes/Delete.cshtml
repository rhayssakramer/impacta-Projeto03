@model impacta_Projeto03.Models.Produto

@{
    ViewData["Title"] = "Excluir | Produtos";
}
<h1 class="mt-3">Excluir Produtos</h1>
<hr />
<div id="excluir" class="container">
    <h4>Tem certeza que deseja excluir esse produto?</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorUnitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorUnitario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>
    
    <form id="formExcluir" asp-action="Delete">
        <input type="hidden" asp-for="ProdutoID" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-light text-black" asp-action="Index">Voltar</a>
    </form>
</div>
